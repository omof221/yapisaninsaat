@model yapisaninsaat.Models.Testimonial
@{ ViewData["Title"] = "Yorum Sil"; }

<h2 class="mb-4 text-danger"><i class="fas fa-trash me-2"></i>Yorumu Sil</h2>
<div class="card border-danger"><div class="card-body">
<div class="alert alert-danger"><strong>@Model.Name</strong> müşterisinin yorumunu silmek istediğinize emin misiniz?</div>
<p class="fst-italic">"@Model.Comment"</p>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
