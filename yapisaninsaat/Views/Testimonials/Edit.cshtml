@model yapisaninsaat.Models.Testimonial
@{ ViewData["Title"] = "Yorum Düzenle"; }

<h2 class="mb-4"><i class="fas fa-edit me-2"></i>Yorum Düzenle</h2>
<div class="card"><div class="card-body">
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
 <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <div class="row">
        <div class="col-md-6 mb-3"><label asp-for="Name" class="form-label">Ad Soyad</label><input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger"></span></div>
        <div class="col-md-6 mb-3"><label asp-for="Title" class="form-label">Unvan/Şirket</label><input asp-for="Title" class="form-control" /></div>
    </div>
    <div class="mb-3"><label asp-for="Comment" class="form-label">Yorum</label><textarea asp-for="Comment" class="form-control" rows="4"></textarea><span asp-validation-for="Comment" class="text-danger"></span></div>
    <div class="row">
    <div class="col-md-4 mb-3">
    <label class="form-label">Fotoğraf</label>
 @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
         <div class="mb-2"><img src="@Model.ImageUrl" class="rounded-circle" style="width:60px;height:60px;object-fit:cover" /> <small class="text-muted d-block">Mevcut fotoğraf</small></div>
   }
     <input type="file" name="ImageFile" class="form-control" accept="image/*" />
   <small class="text-muted">Değiştirmek istemiyorsanız boş bırakın</small>
 </div>
        <div class="col-md-4 mb-3"><label asp-for="Order" class="form-label">Sıra</label><input asp-for="Order" class="form-control" type="number" /></div>
    </div>
  <div class="form-check mb-3"><input asp-for="IsActive" class="form-check-input" /><label asp-for="IsActive" class="form-check-label">Aktif</label></div>
  <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
