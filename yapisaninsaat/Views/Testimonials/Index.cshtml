@model IEnumerable<yapisaninsaat.Models.Testimonial>
@{ ViewData["Title"] = "Müşteri Yorumları"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-comments me-2"></i>Müşteri Yorumları</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni Yorum</a>
</div>

<div class="row">
@foreach (var item in Model)
{
<div class="col-md-4 mb-4">
    <div class="card h-100">
        <div class="card-body">
      <div class="d-flex align-items-center mb-3">
     @if (!string.IsNullOrEmpty(item.ImageUrl))
          {
       <img src="@item.ImageUrl" class="rounded-circle me-3" style="width:50px;height:50px;object-fit:cover" />
     }
    else
                {
  <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width:50px;height:50px;font-size:1.2rem">
    @item.Name.Substring(0, 1)
     </div>
     }
             <div>
         <h6 class="mb-0 fw-bold">@item.Name</h6>
                 <small class="text-muted">@item.Title</small>
       </div>
     </div>
            <p class="text-muted fst-italic">"@item.Comment"</p>
       <div class="d-flex justify-content-between align-items-center">
    <span>@(item.IsActive ? Html.Raw("<span class='badge bg-success'>Aktif</span>") : Html.Raw("<span class='badge bg-secondary'>Pasif</span>"))</span>
       <small class="text-muted">Sıra: @item.Order</small>
            </div>
    </div>
        <div class="card-footer text-end bg-transparent">
  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
     <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
  </div>
    </div>
</div>
}
</div>
