@model yapisaninsaat.Models.ProjectImage
@{ ViewData["Title"] = "Görsel Düzenle"; }

<h2 class="mb-4"><i class="fas fa-edit me-2"></i>Proje Görseli Düzenle</h2>
<div class="card"><div class="card-body">
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <div class="row">
<div class="col-md-6 mb-3"><label asp-for="ProjectId" class="form-label">Proje</label><select asp-for="ProjectId" asp-items="@ViewBag.Projects" class="form-select"></select></div>
        <div class="col-md-6 mb-3">
     <label class="form-label">Görsel</label>
   @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
           <div class="mb-2"><img src="@Model.ImageUrl" class="rounded" style="max-height:80px" /> <small class="text-muted d-block">Mevcut görsel</small></div>
    }
     <input type="file" name="ImageFile" class="form-control" accept="image/*" />
   <small class="text-muted">Değiştirmek istemiyorsanız boş bırakın</small>
        </div>
    </div>
    <div class="col-md-6 mb-3"><label asp-for="Order" class="form-label">Sıra</label><input asp-for="Order" class="form-control" type="number" /></div>
    <div class="form-check mb-3"><input asp-for="IsCover" class="form-check-input" /><label asp-for="IsCover" class="form-check-label">Kapak Fotoğrafı</label></div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
