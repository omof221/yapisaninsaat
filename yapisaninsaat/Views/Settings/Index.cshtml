@model yapisaninsaat.Models.Setting
@{ ViewData["Title"] = "Site Ayarları"; }

<h2 class="mb-4"><i class="fas fa-cog me-2"></i>Site Ayarları</h2>

@if (ViewBag.Message != null)
{
<div class="alert alert-success alert-dismissible fade show">
    <i class="fas fa-check-circle me-1"></i>@ViewBag.Message
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
}

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="LogoUrl" />
    <input type="hidden" asp-for="FaviconUrl" />
    <input type="hidden" asp-for="AboutImageUrl" />

    <div class="card mb-4">
        <div class="card-header bg-primary text-white"><i class="fas fa-palette me-2"></i>Genel Bilgiler</div>
        <div class="card-body">
            <div class="row">
            <div class="col-md-4 mb-3"><label asp-for="CompanyName" class="form-label">Firma Adı</label><input asp-for="CompanyName" class="form-control" placeholder="Yapısan İnşaat" /></div>
        <div class="col-md-4 mb-3">
   <label class="form-label">Logo</label>
     @if (!string.IsNullOrEmpty(Model.LogoUrl))
   {
              <div class="mb-2"><img src="@Model.LogoUrl" class="rounded" style="max-height:60px" /> <small class="text-muted d-block">Mevcut logo</small></div>
   }
   <input type="file" name="LogoFile" class="form-control" accept="image/*" />
              </div>
     <div class="col-md-4 mb-3">
        <label class="form-label">Favicon</label>
           @if (!string.IsNullOrEmpty(Model.FaviconUrl))
         {
          <div class="mb-2"><img src="@Model.FaviconUrl" style="max-height:32px" /> <small class="text-muted d-block">Mevcut favicon</small></div>
        }
    <input type="file" name="FaviconFile" class="form-control" accept="image/*,.ico" />
     </div>
 </div>
       <div class="mb-3"><label asp-for="FooterText" class="form-label">Footer Metni</label><textarea asp-for="FooterText" class="form-control" rows="2"></textarea></div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white"><i class="fas fa-address-card me-2"></i>İletişim Bilgileri</div>
        <div class="card-body">
            <div class="row">
     <div class="col-md-4 mb-3"><label asp-for="Phone" class="form-label">Telefon</label><input asp-for="Phone" class="form-control" /></div>
    <div class="col-md-4 mb-3"><label asp-for="Email" class="form-label">E-posta</label><input asp-for="Email" class="form-control" type="email" /></div>
  <div class="col-md-4 mb-3"><label asp-for="Address" class="form-label">Adres</label><input asp-for="Address" class="form-control" /></div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-info text-white"><i class="fas fa-info-circle me-2"></i>Hakkımızda Sayfası</div>
        <div class="card-body">
            <div class="row">
   <div class="col-md-6 mb-3"><label asp-for="AboutTitle" class="form-label">Hakkımızda Başlık</label><input asp-for="AboutTitle" class="form-control" placeholder="Sessiz, hassas inşaat zanaatı." /></div>
        <div class="col-md-3 mb-3"><label asp-for="FoundedYear" class="form-label">Kuruluş</label><input asp-for="FoundedYear" class="form-control" placeholder="1999 • İstanbul" /></div>
                <div class="col-md-3 mb-3"><label asp-for="Expertise" class="form-label">Uzmanlık Alanı</label><input asp-for="Expertise" class="form-control" placeholder="Konut & Karma Kullanım" /></div>
     </div>
            <div class="mb-3"><label asp-for="AboutSubtitle" class="form-label">Hakkımızda Alt Başlık</label><textarea asp-for="AboutSubtitle" class="form-control" rows="2" placeholder="Kısa tanıtım metni..."></textarea></div>
       <div class="mb-3"><label asp-for="AboutContent" class="form-label">Hakkımızda İçerik (HTML destekli)</label><textarea asp-for="AboutContent" class="form-control" rows="6" placeholder="Detaylı hakkımızda metni..."></textarea></div>
       <div class="row">
     <div class="col-md-6 mb-3"><label asp-for="DeliveryModel" class="form-label">Hizmet Modeli</label><input asp-for="DeliveryModel" class="form-control" placeholder="Tasarım & Yapım, Uçtan Uca" /></div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Hakkımızda Görseli</label>
   @if (!string.IsNullOrEmpty(Model.AboutImageUrl))
                {
           <div class="mb-2"><img src="@Model.AboutImageUrl" class="rounded" style="max-height:80px" /> <small class="text-muted d-block">Mevcut görsel</small></div>
        }
  <input type="file" name="AboutImageFile" class="form-control" accept="image/*" />
     </div>
     </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white"><i class="fas fa-share-alt me-2"></i>Sosyal Medya</div>
      <div class="card-body">
  <div class="row">
     <div class="col-md-4 mb-3"><label asp-for="LinkedInUrl" class="form-label">LinkedIn</label><input asp-for="LinkedInUrl" class="form-control" placeholder="https://linkedin.com/..." /></div>
         <div class="col-md-4 mb-3"><label asp-for="InstagramUrl" class="form-label">Instagram</label><input asp-for="InstagramUrl" class="form-control" placeholder="https://instagram.com/..." /></div>
      <div class="col-md-4 mb-3"><label asp-for="TwitterUrl" class="form-label">Twitter</label><input asp-for="TwitterUrl" class="form-control" placeholder="https://twitter.com/..." /></div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white"><i class="fas fa-code me-2"></i>Script Kodları</div>
   <div class="card-body">
            <div class="mb-3"><label asp-for="HeaderScript" class="form-label">Header Script</label><textarea asp-for="HeaderScript" class="form-control font-monospace" rows="3" style="font-size:0.85rem"></textarea></div>
<div class="mb-3"><label asp-for="FooterScript" class="form-label">Footer Script</label><textarea asp-for="FooterScript" class="form-control font-monospace" rows="3" style="font-size:0.85rem"></textarea></div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white"><i class="fas fa-envelope me-2"></i>SMTP Ayarları</div>
    <div class="card-body">
     <div class="row">
                <div class="col-md-4 mb-3"><label asp-for="SmtpServer" class="form-label">SMTP Sunucu</label><input asp-for="SmtpServer" class="form-control" /></div>
             <div class="col-md-2 mb-3"><label asp-for="SmtpPort" class="form-label">Port</label><input asp-for="SmtpPort" class="form-control" type="number" /></div>
        <div class="col-md-3 mb-3"><label asp-for="SmtpEmail" class="form-label">E-posta</label><input asp-for="SmtpEmail" class="form-control" /></div>
       <div class="col-md-3 mb-3"><label asp-for="SmtpPassword" class="form-label">Şifre</label><input asp-for="SmtpPassword" class="form-control" type="password" /></div>
          </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save me-2"></i>Ayarları Kaydet</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
