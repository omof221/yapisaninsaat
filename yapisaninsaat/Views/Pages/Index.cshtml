@model IEnumerable<yapisaninsaat.Models.Page>
@{ ViewData["Title"] = "Sayfalar"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-file-alt me-2"></i>Sayfalar</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni Sayfa</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
     <tr>
           <th>Başlık</th>
       <th>Slug</th>
        <th>Durum</th>
            <th>Oluşturma</th>
     <th class="text-end">İşlemler</th>
       </tr>
     </thead>
       <tbody>
  @foreach (var item in Model)
             {
           <tr>
 <td class="fw-bold">@item.Title</td>
  <td><code>/@item.Slug</code></td>
  <td>
  @if (item.IsActive)
        {
            <span class="badge bg-success">Aktif</span>
             }
            else
              {
      <span class="badge bg-secondary">Pasif</span>
        }
           </td>
      <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
     <td class="text-end">
     <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
   <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
     </td>
  </tr>
       }
  </tbody>
     </table>
    </div>
</div>
