@model yapisaninsaat.Models.Page
@{ ViewData["Title"] = "Sayfa Detayı"; }

<h2 class="mb-4"><i class="fas fa-eye me-2"></i>@Model.Title</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
    <dt class="col-sm-3">Başlık</dt>
 <dd class="col-sm-9">@Model.Title</dd>
         <dt class="col-sm-3">Slug</dt>
            <dd class="col-sm-9"><code>/@Model.Slug</code></dd>
     <dt class="col-sm-3">Meta Başlık</dt>
     <dd class="col-sm-9">@Model.MetaTitle</dd>
  <dt class="col-sm-3">Meta Açıklama</dt>
  <dd class="col-sm-9">@Model.MetaDescription</dd>
  <dt class="col-sm-3">Eski Slug'lar</dt>
      <dd class="col-sm-9">@Model.OldSlugs</dd>
     <dt class="col-sm-3">Durum</dt>
       <dd class="col-sm-9">
    @if (Model.IsActive) { <span class="badge bg-success">Aktif</span> } else { <span class="badge bg-secondary">Pasif</span> }
</dd>
         <dt class="col-sm-3">Oluşturma Tarihi</dt>
 <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
  <dt class="col-sm-3">İçerik</dt>
       <dd class="col-sm-9">@Html.Raw(Model.Content)</dd>
      </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit me-1"></i>Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Listeye Dön</a>
</div>
