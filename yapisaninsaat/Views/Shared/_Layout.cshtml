<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yapısan İnşaat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/yapisaninsaat.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<style>
        :root {
     --sidebar-width: 260px;
      --primary: #1a1a2e;
      --primary-dark: #12122a;
 --accent: #e94560;
            --accent-hover: #c73a52;
   --bg: #f0f2f5;
            --text-sidebar: #8a8fa8;
            --text-sidebar-hover: #ffffff;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
     body { font-family: 'Segoe UI', sans-serif; background: var(--bg); overflow-x: hidden; }

        /* ===== SIDEBAR ===== */
      .sidebar {
            position: fixed; top: 0; left: 0; bottom: 0;
  width: var(--sidebar-width);
            background: var(--primary);
    z-index: 1040;
    display: flex; flex-direction: column;
   transition: transform .3s ease;
            overflow-y: auto;
 scrollbar-width: thin;
            scrollbar-color: #2a2a4a transparent;
        }
        .sidebar::-webkit-scrollbar { width: 4px; }
        .sidebar::-webkit-scrollbar-thumb { background: #2a2a4a; border-radius: 4px; }

        .sidebar-brand {
            padding: 20px 20px 16px;
    border-bottom: 1px solid rgba(255,255,255,.07);
            text-align: center;
     }
        .sidebar-brand a {
     color: #fff; text-decoration: none; font-size: 1.15rem; font-weight: 700;
     letter-spacing: .5px;
        }
        .sidebar-brand a i { color: var(--accent); }

        .sidebar-section {
          padding: 16px 16px 4px;
          font-size: .65rem; font-weight: 700;
   text-transform: uppercase; letter-spacing: 1.5px;
      color: #4a4f6a;
        }

   .sidebar-nav { list-style: none; padding: 4px 10px; }
        .sidebar-nav li { margin-bottom: 2px; }
        .sidebar-nav a {
   display: flex; align-items: center; gap: 10px;
         padding: 9px 14px; border-radius: 8px;
         color: var(--text-sidebar); text-decoration: none;
            font-size: .85rem; font-weight: 500;
  transition: all .2s ease;
  }
        .sidebar-nav a i { width: 18px; text-align: center; font-size: .85rem; }
        .sidebar-nav a:hover,
    .sidebar-nav a.active {
            background: rgba(233,69,96,.12);
            color: var(--text-sidebar-hover);
   }
        .sidebar-nav a.active { background: var(--accent); color: #fff; }

   .sidebar-footer {
            margin-top: auto;
         padding: 16px 20px;
       border-top: 1px solid rgba(255,255,255,.07);
      text-align: center;
  font-size: .72rem;
      color: #4a4f6a;
        }

   /* ===== MAIN CONTENT ===== */
   .main-wrapper {
      margin-left: var(--sidebar-width);
            min-height: 100vh;
         display: flex; flex-direction: column;
        }

   .topbar {
            background: #fff;
   padding: 12px 30px;
      border-bottom: 1px solid #e3e6f0;
       display: flex; align-items: center; justify-content: space-between;
         position: sticky; top: 0; z-index: 1030;
            box-shadow: 0 1px 4px rgba(0,0,0,.04);
        }
  .topbar-title { font-size: 1rem; font-weight: 600; color: #333; }
.topbar-toggle { display: none; background: none; border: none; font-size: 1.3rem; color: #333; cursor: pointer; }

        .main-content {
        flex: 1;
            padding: 24px 30px;
    }

.main-footer {
            background: var(--primary);
   color: #6c7293;
       text-align: center;
 padding: 14px 20px;
            font-size: .8rem;
        }

        /* ===== CARDS & TABLE ===== */
        .card { border: none; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,.06); transition: transform .2s; }
        .card:hover { transform: translateY(-2px); }
        .btn-primary { background: var(--accent); border-color: var(--accent); }
      .btn-primary:hover { background: var(--accent-hover); border-color: var(--accent-hover); }
        .table { border-radius: 8px; overflow: hidden; }
     .table thead { background: var(--primary); color: #fff; }

  /* ===== OVERLAY (mobile) ===== */
      .sidebar-overlay {
display: none; position: fixed; inset: 0;
            background: rgba(0,0,0,.45); z-index: 1035;
 }

     /* ===== RESPONSIVE ===== */
    @@media (max-width: 991.98px) {
            .sidebar { transform: translateX(-100%); }
            .sidebar.show { transform: translateX(0); }
            .sidebar-overlay.show { display: block; }
     .main-wrapper { margin-left: 0; }
  .topbar-toggle { display: block; }
.main-content { padding: 16px; }
  }
    </style>
</head>
<body>

    <!-- Sidebar Overlay (mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- ===== SIDEBAR ===== -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-brand">
      <a asp-controller="Home" asp-action="Index">
                <i class="fas fa-building me-2"></i>Yapısan İnşaat
       </a>
        </div>

        <div class="sidebar-section">Siteye Git</div>
        <ul class="sidebar-nav">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Anasayfa</a></li>
      </ul>

    <div class="sidebar-section">İçerik Yönetimi</div>
        <ul class="sidebar-nav">
         <li><a asp-controller="Pages" asp-action="Index"><i class="fas fa-file-alt"></i>Sayfalar</a></li>
            <li><a asp-controller="Services" asp-action="Index"><i class="fas fa-concierge-bell"></i>Hizmetler</a></li>
            <li><a asp-controller="Sliders" asp-action="Index"><i class="fas fa-images"></i>Slider</a></li>
   </ul>

        <div class="sidebar-section">Proje Yönetimi</div>
        <ul class="sidebar-nav">
         <li><a asp-controller="ProjectCategories" asp-action="Index"><i class="fas fa-tags"></i>Kategoriler</a></li>
            <li><a asp-controller="Projects" asp-action="Index"><i class="fas fa-project-diagram"></i>Projeler</a></li>
     <li><a asp-controller="ProjectImages" asp-action="Index"><i class="fas fa-photo-video"></i>Proje Görselleri</a></li>
        </ul>

        <div class="sidebar-section">Sosyal Kanıt</div>
        <ul class="sidebar-nav">
         <li><a asp-controller="Statistics" asp-action="Index"><i class="fas fa-chart-bar"></i>İstatistikler</a></li>
      <li><a asp-controller="Testimonials" asp-action="Index"><i class="fas fa-comments"></i>Müşteri Yorumları</a></li>
         <li><a asp-controller="References" asp-action="Index"><i class="fas fa-handshake"></i>Referanslar</a></li>
 <li><a asp-controller="FAQs" asp-action="Index"><i class="fas fa-question-circle"></i>SSS</a></li>
        <li><a asp-controller="TeamMembers" asp-action="Index"><i class="fas fa-users-cog"></i>Ekip Üyeleri</a></li>
        </ul>

        <div class="sidebar-section">Etkileşim</div>
        <ul class="sidebar-nav">
  <li><a asp-controller="PhotoExhibitions" asp-action="Index"><i class="fas fa-camera"></i>Fotoğraf Sergisi</a></li>
 <li><a asp-controller="Popups" asp-action="Index"><i class="fas fa-window-restore"></i>Popup</a></li>
   <li><a asp-controller="ContactMessages" asp-action="Index"><i class="fas fa-envelope"></i>İletişim Mesajları</a></li>
        </ul>

        <div class="sidebar-section">Sistem</div>
        <ul class="sidebar-nav">
            <li><a asp-controller="Settings" asp-action="Index"><i class="fas fa-cog"></i>Ayarlar</a></li>
            <li><a asp-controller="Users" asp-action="Index"><i class="fas fa-users"></i>Kullanıcılar</a></li>
        </ul>

        <div class="sidebar-footer">
            &copy; @DateTime.Now.Year Yapısan İnşaat<br />Yönetim Paneli
        </div>
    </aside>

    <!-- ===== MAIN ===== -->
    <div class="main-wrapper">
        <div class="topbar">
            <button class="topbar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
     <span class="topbar-title">@ViewData["Title"]</span>
   <div>
   <span class="text-muted small"><i class="fas fa-user-circle me-1"></i>Admin</span>
         </div>
        </div>

        <div class="main-content">
  @RenderBody()
        </div>

        <footer class="main-footer">
          &copy; @DateTime.Now.Year - Yapısan İnşaat Yönetim Paneli
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
    // Sidebar toggle (mobile)
     const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebarOverlay');
      const toggle = document.getElementById('sidebarToggle');

        toggle.addEventListener('click', () => {
   sidebar.classList.toggle('show');
     overlay.classList.toggle('show');
        });
        overlay.addEventListener('click', () => {
         sidebar.classList.remove('show');
 overlay.classList.remove('show');
        });

        // Active link highlight
        document.querySelectorAll('.sidebar-nav a').forEach(link => {
            if (link.getAttribute('href') === window.location.pathname) {
         link.classList.add('active');
        }
     });
  </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
