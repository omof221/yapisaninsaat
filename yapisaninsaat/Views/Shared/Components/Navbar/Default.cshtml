@{
    var settings = ViewBag.Settings as yapisaninsaat.Models.Setting;
    var services = ViewBag.Services as List<yapisaninsaat.Models.Service>;
}

<header class="navbar-wrapper">
    <div class="nav-container">
        @* SOL LOGO *@
        <div class="side-logo-fixed left-side">
            <a href="/">
                <div class="logo-crop-box">
                    <img src="https://i.hizliresim.com/4lgr4co.png" alt="Yapısan Mühendislik">
                </div>
            </a>
        </div>

        @* ORTA NAVİGASYON KAPSÜLÜ *@
        <nav id="central-capsule">
            <div class="nav-links">
                <a href="/hakkimizda">Hakkımızda</a>
                <a href="/projeler">Projeler</a>
                <a href="/#testimonials">Referanslar</a>
            </div>
            <a class="action-btn-pill" href="/#cta">Teklif Al</a>
        </nav>

        @* SAĞ LOGO *@
        <div class="side-logo-fixed right-side">
            <a href="/">
                <div class="logo-crop-box">
                    <img src="https://i.hizliresim.com/bl5h0sc.png" alt="İpekyolu İnşaat">
                </div>
            </a>
        </div>
    </div>
</header>

<style>
    /* GENEL YAPI */
    .navbar-wrapper {
        position: fixed;
        top: 20px;
        left: 0;
        right: 0;
        z-index: 1000;
        pointer-events: none;
    }

    .nav-container {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 10px;
        /* Mobilde zorla yan yana tutmak için kritik ayar */
        flex-wrap: nowrap !important;
    }

    /* LOGO AYARLARI */
    .side-logo-fixed {
        pointer-events: auto;
        position: relative; /* Mobilde hizalama için relative kalsın */
        width: 180px;
        height: 90px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* KAPSÜLE OLAN MESAFE (Masaüstü) */
    .left-side {
        margin-right: 15px;
    }

    .right-side {
        margin-left: 15px;
    }

    .logo-crop-box {
        width: 100%;
        height: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .logo-crop-box img {
            /* Sol logo yazısının kesilmemesi için yukarı hizalama */
            transform: scale(4.0);
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: top center;
        }

    /* KAPSÜL TASARIMI */
    #central-capsule {
        pointer-events: auto;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 8px 20px;
        border-radius: 100px;
        display: flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        border: 1px solid rgba(255,255,255,0.4);
        flex-shrink: 0; /* Kapsülün mobilde ezilmesini engeller */
    }

    .nav-links {
        display: flex;
        gap: 12px;
    }

        .nav-links a {
            color: #1a1a1a;
            text-decoration: none;
            font-weight: 600;
            font-size: 13px;
            white-space: nowrap;
        }

    .action-btn-pill {
        background: #1a1a1a;
        color: #fff !important;
        padding: 8px 18px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 700;
        font-size: 12px;
        white-space: nowrap;
    }

    /* MOBİL ÖZEL DÜZENLEME: Her Şeyi Tek Satıra Sığdırır */
    @@media (max-width: 768px) {
        .navbar-wrapper {
            top: 10px;
        }

        .nav-container {
            padding: 0 5px;
            gap: 5px;
        }

        .side-logo-fixed {
            width: 70px; /* Mobilde alanı daraltmak için küçültüldü */
            height: 45px;
            margin: 0 !important;
        }

        .logo-crop-box img {
            transform: scale(2.2); /* Mobilde taşmayı önlemek için ölçek düşürüldü */
        }

        #central-capsule {
            padding: 6px 12px;
            gap: 8px;
        }

        .nav-links {
            gap: 6px;
        }

            .nav-links a {
                font-size: 10px; /* Mobilde yazıları sığdırmak için küçültme */
            }

        .action-btn-pill {
            padding: 6px 10px;
            font-size: 10px;
        }
    }

    /* Ekstra küçük ekranlar için (iPhone SE vb.) */
    @@media (max-width: 380px) {
        .nav-links {
            display: none;
        }
        /* Alan çok darsa linkleri gizle, sadece buton kalsın */
        .side-logo-fixed {
            width: 60px;
        }
    }
</style>