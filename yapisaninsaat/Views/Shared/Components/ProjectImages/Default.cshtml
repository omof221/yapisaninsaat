@model IEnumerable<yapisaninsaat.Models.PhotoExhibition>

<section id="photo-exhibition" class="projects-section">
    <div class="container">
        <div class="project-header-row">
            <div>
                <h2 class="section-title">Fotoğraf Sergisi</h2>
                <p class="section-desc">Çalışmalarımızdan ve şantiyelerimizden kareler.</p>
            </div>
            <button class="btn-secondary" onclick="location.href='@Url.Action("Gallery", "PhotoExhibitions")'">
                Tümünü Gör
            </button>
        </div>

        <div class="projects-grid">
            @foreach (var item in Model)
            {
                <div class="project-card">
                    <img src="@item.ImageUrl" alt="@item.Title">

                    <div class="project-info">
                        <div>
                            <div class="project-name">@(item.Title ?? "İsimsiz Kare")</div>
                            <div class="project-meta">@(item.Category ?? "Genel")</div>
                        </div>
                        <div class="project-arrow">
                            <iconify-icon icon="lucide:camera" style="font-size: 20px;"></iconify-icon>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>