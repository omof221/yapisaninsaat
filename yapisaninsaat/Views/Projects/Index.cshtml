@model IEnumerable<yapisaninsaat.Models.Project>
@{ ViewData["Title"] = "Projeler"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-project-diagram me-2"></i>Projeler</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni Proje</a>
</div>
<div class="card"><div class="card-body p-0">
<table class="table table-hover mb-0">
<thead><tr><th>Başlık</th><th>Kategori</th><th>Konum</th><th>Durum</th><th>Öne Çıkan</th><th>Görseller</th><th>Tarih</th><th class="text-end">İşlemler</th></tr></thead>
<tbody>
@foreach (var item in Model)
{
<tr>
    <td class="fw-bold">@item.Title</td>
    <td><span class="badge bg-info">@item.Category?.Title</span></td>
    <td>@item.Location</td>
    <td>@(item.ProjectStatus == 0 ? Html.Raw("<span class='badge bg-warning text-dark'>Devam Eden</span>") : Html.Raw("<span class='badge bg-success'>Biten</span>"))</td>
    <td>@(item.IsFeatured ? Html.Raw("<i class='fas fa-star text-warning'></i>") : Html.Raw("<i class='far fa-star text-muted'></i>"))</td>
    <td>
        <a asp-controller="ProjectImages" asp-action="Manage" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
     <i class="fas fa-images me-1"></i>Görseller
     </a>
    </td>
    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
 <td class="text-end">
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
    </td>
</tr>
}
</tbody></table></div></div>
