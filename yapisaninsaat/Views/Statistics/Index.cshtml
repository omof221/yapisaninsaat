@model IEnumerable<yapisaninsaat.Models.Statistic>
@{ ViewData["Title"] = "İstatistikler"; }

<div class="d-flex justify-content-between align-items-center mb-4">
 <h2><i class="fas fa-chart-bar me-2"></i>İstatistikler</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni İstatistik</a>
</div>

<div class="row mb-4">
@foreach (var item in Model)
{
<div class="col-md-3 mb-3">
    <div class="card text-center h-100">
<div class="card-body">
       <i class="@item.Icon fa-2x text-primary mb-2"></i>
      <h3 class="fw-bold text-primary">@item.Value</h3>
     <p class="text-muted mb-0">@item.Title</p>
       </div>
        <div class="card-footer bg-transparent">
      <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
        </div>
    </div>
</div>
}
</div>
