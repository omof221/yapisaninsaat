@model yapisaninsaat.Models.Statistic
@{ ViewData["Title"] = "İstatistik Düzenle"; }

<h2 class="mb-4"><i class="fas fa-edit me-2"></i>İstatistik Düzenle</h2>
<div class="card"><div class="card-body">
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
      <div class="col-md-6 mb-3"><label asp-for="Title" class="form-label">Başlık</label><input asp-for="Title" class="form-control" /><span asp-validation-for="Title" class="text-danger"></span></div>
        <div class="col-md-6 mb-3"><label asp-for="Value" class="form-label">Değer</label><input asp-for="Value" class="form-control" /><span asp-validation-for="Value" class="text-danger"></span></div>
    </div>
    <div class="row">
    <div class="col-md-6 mb-3"><label asp-for="Icon" class="form-label">İkon</label><input asp-for="Icon" class="form-control" /></div>
        <div class="col-md-6 mb-3"><label asp-for="Order" class="form-label">Sıra</label><input asp-for="Order" class="form-control" type="number" /></div>
    </div>
    <div class="form-check mb-3"><input asp-for="IsActive" class="form-check-input" /><label asp-for="IsActive" class="form-check-label">Aktif</label></div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
