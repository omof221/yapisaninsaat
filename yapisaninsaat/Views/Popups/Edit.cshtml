@model yapisaninsaat.Models.Popup
@{ ViewData["Title"] = "Popup Düzenle"; }

<h2 class="mb-4"><i class="fas fa-edit me-2"></i>Popup Düzenle</h2>
<div class="card"><div class="card-body">
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" asp-for="ImageUrl" />
    <div class="row">
  <div class="col-md-6 mb-3"><label asp-for="Title" class="form-label">Başlık</label><input asp-for="Title" class="form-control" /><span asp-validation-for="Title" class="text-danger"></span></div>
        <div class="col-md-6 mb-3"><label asp-for="ShowOnPage" class="form-label">Gösterilecek Sayfa</label>
          <select asp-for="ShowOnPage" class="form-select"><option value="Home">Anasayfa</option><option value="All">Tüm Sayfalar</option></select></div>
    </div>
    <div class="mb-3"><label asp-for="Description" class="form-label">Açıklama (HTML)</label><textarea asp-for="Description" class="form-control" rows="5"></textarea></div>
    <div class="row">
     <div class="col-md-4 mb-3">
  <label class="form-label">Görsel</label>
   @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
    <div class="mb-2"><img src="@Model.ImageUrl" class="rounded" style="max-height:80px" /> <small class="text-muted d-block">Mevcut görsel</small></div>
    }
    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
   <small class="text-muted">Değiştirmek istemiyorsanız boş bırakın</small>
 </div>
        <div class="col-md-4 mb-3"><label asp-for="ButtonText" class="form-label">Buton Metni</label><input asp-for="ButtonText" class="form-control" /></div>
     <div class="col-md-4 mb-3"><label asp-for="ButtonUrl" class="form-label">Buton URL</label><input asp-for="ButtonUrl" class="form-control" /></div>
    </div>
    <div class="form-check mb-3"><input asp-for="IsActive" class="form-check-input" /><label asp-for="IsActive" class="form-check-label">Aktif</label></div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
