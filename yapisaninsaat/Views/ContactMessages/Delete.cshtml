@model yapisaninsaat.Models.ContactMessage
@{ ViewData["Title"] = "Mesaj Sil"; }

<h2 class="mb-4 text-danger"><i class="fas fa-trash me-2"></i>Mesajı Sil</h2>
<div class="card border-danger"><div class="card-body">
<div class="alert alert-danger"><strong>@Model.FullName</strong> tarafından gönderilen mesajı silmek istediğinize emin misiniz?</div>
<dl class="row">
    <dt class="col-sm-3">Ad Soyad</dt><dd class="col-sm-9">@Model.FullName</dd>
 <dt class="col-sm-3">E-posta</dt><dd class="col-sm-9">@Model.Email</dd>
    <dt class="col-sm-3">Tarih</dt><dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
</dl>
<form asp-action="Delete">
 <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
