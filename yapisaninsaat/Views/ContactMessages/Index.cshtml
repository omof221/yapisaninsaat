@model IEnumerable<yapisaninsaat.Models.ContactMessage>
@{ ViewData["Title"] = "İletişim Mesajları"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-envelope me-2"></i>İletişim Mesajları</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni Mesaj</a>
</div>
<div class="card"><div class="card-body p-0">
<table class="table table-hover mb-0">
<thead><tr><th>Ad Soyad</th><th>E-posta</th><th>Telefon</th><th>Durum</th><th>Tarih</th><th class="text-end">İşlemler</th></tr></thead>
<tbody>
@foreach (var item in Model)
{
<tr class="@(!item.IsRead ? "table-warning" : "")">
    <td class="fw-bold">@item.FullName</td>
 <td>@item.Email</td>
    <td>@item.Phone</td>
    <td>@(item.IsRead ? Html.Raw("<span class='badge bg-success'>Okundu</span>") : Html.Raw("<span class='badge bg-warning text-dark'>Yeni</span>"))</td>
    <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
    <td class="text-end">
  <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
    </td>
</tr>
}
</tbody></table></div></div>
