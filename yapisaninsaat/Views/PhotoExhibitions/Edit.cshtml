@model yapisaninsaat.Models.PhotoExhibition
@{ ViewData["Title"] = "Fotoğraf Düzenle"; }

<h2 class="mb-4"><i class="fas fa-edit me-2"></i>Fotoğraf Düzenle</h2>
<div class="card"><div class="card-body">
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <div class="row">
     <div class="col-md-6 mb-3"><label asp-for="Title" class="form-label">Başlık</label><input asp-for="Title" class="form-control" /></div>
        <div class="col-md-6 mb-3"><label asp-for="Category" class="form-label">Kategori</label>
  <select asp-for="Category" class="form-select"><option value="Ekip">Ekip</option><option value="Şantiye">Şantiye</option><option value="Detay">Detay</option></select></div>
    </div>
    <div class="row">
  <div class="col-md-6 mb-3">
  <label class="form-label">Görsel</label>
   @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
     <div class="mb-2"><img src="@Model.ImageUrl" class="rounded" style="max-height:80px" /> <small class="text-muted d-block">Mevcut görsel</small></div>
    }
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
   <small class="text-muted">Değiştirmek istemiyorsanız boş bırakın</small>
     </div>
        <div class="col-md-6 mb-3"><label asp-for="Order" class="form-label">Sıra</label><input asp-for="Order" class="form-control" type="number" /></div>
    </div>
    <div class="form-check mb-3"><input asp-for="IsHomeActive" class="form-check-input" /><label asp-for="IsHomeActive" class="form-check-label">Anasayfada Göster</label></div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
