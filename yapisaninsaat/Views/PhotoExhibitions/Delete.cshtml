@model yapisaninsaat.Models.PhotoExhibition
@{ ViewData["Title"] = "Fotoğraf Sil"; }

<h2 class="mb-4 text-danger"><i class="fas fa-trash me-2"></i>Fotoğrafı Sil</h2>
<div class="card border-danger"><div class="card-body">
<div class="alert alert-danger">Bu fotoğrafı silmek istediğinize emin misiniz?</div>
<img src="@Model.ImageUrl" style="max-height:200px" class="rounded mb-3" />
<p><strong>Başlık:</strong> @(Model.Title ?? "Başlıksız") | <strong>Kategori:</strong> @Model.Category</p>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
