@model IEnumerable<yapisaninsaat.Models.PhotoExhibition>
@{ ViewData["Title"] = "Fotoğraf Sergisi"; }

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-camera me-2"></i>Fotoğraf Sergisi</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni Fotoğraf</a>
</div>
<div class="row">
@foreach (var item in Model)
{
<div class="col-md-3 mb-4">
    <div class="card h-100">
   <img src="@item.ImageUrl" class="card-img-top" style="height:200px;object-fit:cover" />
        <div class="card-body">
     <h6>@(item.Title ?? "Başlıksız")</h6>
       <span class="badge bg-info">@item.Category</span>
      @if (item.IsHomeActive) { <span class="badge bg-success">Anasayfa</span> }
     <small class="text-muted d-block mt-1">Sıra: @item.Order</small>
       </div>
   <div class="card-footer text-end">
  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
   <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
   </div>
    </div>
</div>
}
</div>
