@model IEnumerable<yapisaninsaat.Models.User>
@{ ViewData["Title"] = "Kullanıcılar"; }

<div class="d-flex justify-content-between align-items-center mb-4">
 <h2><i class="fas fa-users me-2"></i>Kullanıcılar</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni Kullanıcı</a>
</div>
<div class="card"><div class="card-body p-0">
<table class="table table-hover mb-0">
<thead><tr><th>Kullanıcı Adı</th><th>E-posta</th><th>Rol</th><th>Durum</th><th>Kayıt Tarihi</th><th class="text-end">İşlemler</th></tr></thead>
<tbody>
@foreach (var item in Model)
{
<tr>
    <td class="fw-bold"><i class="fas fa-user-circle me-2 text-muted"></i>@item.Username</td>
    <td>@item.Email</td>
    <td><span class="badge bg-info">@item.Role</span></td>
    <td>@(item.IsActive ? Html.Raw("<span class='badge bg-success'>Aktif</span>") : Html.Raw("<span class='badge bg-secondary'>Pasif</span>"))</td>
    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
    <td class="text-end">
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
    </td>
</tr>
}
</tbody></table></div></div>
