@model yapisaninsaat.Models.User
@{ ViewData["Title"] = "Kullanıcı Sil"; }

<h2 class="mb-4 text-danger"><i class="fas fa-trash me-2"></i>Kullanıcıyı Sil</h2>
<div class="card border-danger"><div class="card-body">
<div class="alert alert-danger"><strong>@Model.Username</strong> kullanıcısını silmek istediğinize emin misiniz?</div>
<dl class="row">
    <dt class="col-sm-3">Kullanıcı Adı</dt><dd class="col-sm-9">@Model.Username</dd>
    <dt class="col-sm-3">E-posta</dt><dd class="col-sm-9">@Model.Email</dd>
    <dt class="col-sm-3">Rol</dt><dd class="col-sm-9">@Model.Role</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Evet, Sil</button>
 <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
