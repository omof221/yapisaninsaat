@model yapisaninsaat.Models.FAQ
@{ ViewData["Title"] = "SSS Düzenle"; }

<h2 class="mb-4"><i class="fas fa-edit me-2"></i>SSS Düzenle</h2>
<div class="card"><div class="card-body">
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="Id" />
    <div class="mb-3"><label asp-for="Question" class="form-label">Soru</label><input asp-for="Question" class="form-control" /><span asp-validation-for="Question" class="text-danger"></span></div>
    <div class="mb-3"><label asp-for="Answer" class="form-label">Cevap</label><textarea asp-for="Answer" class="form-control" rows="5"></textarea><span asp-validation-for="Answer" class="text-danger"></span></div>
    <div class="row">
        <div class="col-md-6 mb-3"><label asp-for="Order" class="form-label">Sıra</label><input asp-for="Order" class="form-control" type="number" /></div>
    </div>
    <div class="form-check mb-3"><input asp-for="IsActive" class="form-check-input" /><label asp-for="IsActive" class="form-check-label">Aktif</label></div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
