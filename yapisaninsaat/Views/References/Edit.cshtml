@model yapisaninsaat.Models.Reference
@{ ViewData["Title"] = "Referans Düzenle"; }

<h2 class="mb-4"><i class="fas fa-edit me-2"></i>Referans Düzenle</h2>
<div class="card"><div class="card-body">
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="LogoUrl" />
    <div class="row">
   <div class="col-md-6 mb-3"><label asp-for="CompanyName" class="form-label">Şirket Adı</label><input asp-for="CompanyName" class="form-control" /><span asp-validation-for="CompanyName" class="text-danger"></span></div>
     <div class="col-md-6 mb-3">
   <label class="form-label">Logo</label>
  @if (!string.IsNullOrEmpty(Model.LogoUrl))
         {
 <div class="mb-2"><img src="@Model.LogoUrl" style="max-height:60px" class="rounded" /> <small class="text-muted d-block">Mevcut logo</small></div>
   }
 <input type="file" name="LogoFile" class="form-control" accept="image/*" />
 <small class="text-muted">Değiştirmek istemiyorsanız boş bırakın</small>
  </div>
    </div>
<div class="row">
   <div class="col-md-6 mb-3"><label asp-for="WebsiteUrl" class="form-label">Web Sitesi</label><input asp-for="WebsiteUrl" class="form-control" /></div>
     <div class="col-md-6 mb-3"><label asp-for="Order" class="form-label">Sıra</label><input asp-for="Order" class="form-control" type="number" /></div>
    </div>
    <div class="form-check mb-3"><input asp-for="IsActive" class="form-check-input" /><label asp-for="IsActive" class="form-check-label">Aktif</label></div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
