@model yapisaninsaat.Models.TeamMember
@{ ViewData["Title"] = "Yeni Ekip Üyesi"; }

<h2 class="mb-4"><i class="fas fa-plus me-2"></i>Yeni Ekip Üyesi</h2>
<div class="card"><div class="card-body">
<form asp-action="Create" enctype="multipart/form-data">
 <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
 <div class="row">
    <div class="col-md-6 mb-3"><label asp-for="FullName" class="form-label">Ad Soyad</label><input asp-for="FullName" class="form-control" /><span asp-validation-for="FullName" class="text-danger"></span></div>
        <div class="col-md-6 mb-3"><label asp-for="Title" class="form-label">Ünvan</label><input asp-for="Title" class="form-control" placeholder="Kurucu Ortak · Mimarlık" /></div>
    </div>
    <div class="mb-3"><label asp-for="Specialty" class="form-label">Uzmanlık Alanı</label><input asp-for="Specialty" class="form-control" placeholder="Yüksek katlı konut ve karma kullanım projeleri." /></div>
    <div class="row">
    <div class="col-md-6 mb-3"><label class="form-label">Fotoğraf</label><input type="file" name="ImageFile" class="form-control" accept="image/*" /></div>
        <div class="col-md-3 mb-3"><label asp-for="Order" class="form-label">Sıra</label><input asp-for="Order" class="form-control" type="number" /></div>
    </div>
    <div class="form-check mb-3"><input asp-for="IsActive" class="form-check-input" /><label asp-for="IsActive" class="form-check-label">Aktif</label></div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
</div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
