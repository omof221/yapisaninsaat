@model IEnumerable<yapisaninsaat.Models.ProjectCategory>
@{ ViewData["Title"] = "Proje Kategorileri"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-tags me-2"></i>Proje Kategorileri</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Yeni Kategori</a>
</div>
<div class="card"><div class="card-body p-0">
<table class="table table-hover mb-0">
<thead><tr><th>Sıra</th><th>Başlık</th><th>Slug</th><th>Durum</th><th class="text-end">İşlemler</th></tr></thead>
<tbody>
@foreach (var item in Model)
{
<tr>
    <td>@item.Order</td>
    <td class="fw-bold">@item.Title</td>
    <td><code>/@item.Slug</code></td>
  <td>@(item.IsActive ? Html.Raw("<span class='badge bg-success'>Aktif</span>") : Html.Raw("<span class='badge bg-secondary'>Pasif</span>"))</td>
    <td class="text-end">
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
    </td>
</tr>
}
</tbody></table></div></div>
